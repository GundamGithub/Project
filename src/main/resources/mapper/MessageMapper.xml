<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ssm.proj.mapper.MessageMapper">
    <resultMap id="MessageResultMap" type="com.ssm.proj.entity.message.Message">
        <!--@mbg.generated-->
        <!--@Table message-->
        <result column="mid" jdbcType="INTEGER" property="mid"/>
        <result column="id" jdbcType="INTEGER" property="id" />
        <result column="username" jdbcType="VARCHAR" property="username" />
        <result column="content" jdbcType="LONGVARCHAR" property="content" />
        <result column="data" jdbcType="TIMESTAMP" property="data" />
        <result column="type" jdbcType="VARCHAR" property="type"/>
        <result column="status" jdbcType="INTEGER" property="status" />
        <result column="isdel" jdbcType="INTEGER" property="isdel" />
    </resultMap>

    <resultMap id="ListMsgResultMap" type="com.ssm.proj.entity.message.MessageDto">
        <collection property="messages" resultMap="MessageResultMap">
        </collection>
    </resultMap>









    <insert id="insert" >
        insert into message(id,username,content,type) values (#{message.id},#{message.username},#{message.content},#{message.type});

    </insert>

<!--    根据mid将留言设为已读  1为已读-->
    <update id="UpdateStatus">
        update message set status=1 where mid =#{mid};
    </update>
    <select id="SelectAll" resultMap="ListMsgResultMap">
        select u.id,u.username,phone,email,content,data,type,status from user u left join message m on u.id=m.id where isdel=0
        limit(#{page}-1)*10,10;
    </select>


</mapper>